<UserControl
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:TestApp.ManualTestWidgets"
			 xmlns:Views="clr-namespace:NewellClark.Wpf.UserControls.Views;assembly=WpfCustomUserControls" x:Class="TestApp.ManualTestWidgets.RegexPropertyBindingTest"
			 mc:Ignorable="d">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*"></ColumnDefinition>
			<ColumnDefinition Width="1*"></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<Views:RegexInputWidgetHorizontal Name="leftInput" Margin="10" Height="Auto"/>
		<Views:RegexInputWidgetHorizontal Name="rightInput" Grid.Column="1"
			Regex="{Binding ElementName=leftInput, Path=Regex, Mode=TwoWay,
			UpdateSourceTrigger=PropertyChanged}" Margin="10" Height="Auto" />
	</Grid>
</UserControl>
