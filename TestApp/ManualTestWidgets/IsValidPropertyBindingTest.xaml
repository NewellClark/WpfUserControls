<UserControl
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:TestApp.ManualTestWidgets"
			 xmlns:Views="clr-namespace:NewellClark.Wpf.UserControls.Views;assembly=WpfCustomUserControls" x:Class="TestApp.ManualTestWidgets.IsValidPropertyBindingTest"
			 mc:Ignorable="d" Height="168.07">
	<Grid>

		<Views:RegexInputWidgetHorizontal x:Name="regexInput" Margin="10,10,10,41" Width="Auto" Height="Auto"/>
		<Button x:Name="submitButton" Content="Submit" Margin="0,0,10,10" 
				IsEnabled="{Binding ElementName=regexInput, Path=IsValid, Mode=OneWay}"
				HorizontalAlignment="Right" Width="75" Height="26" VerticalAlignment="Bottom"/>
		<TextBlock x:Name="invalidMessageViewer" 
				   Margin="10,0,90,10" TextWrapping="Wrap" 
				   Text="The current regular expression is invalid. " 
				   Height="26" VerticalAlignment="Bottom" Foreground="Red"/>

	</Grid>
</UserControl>
