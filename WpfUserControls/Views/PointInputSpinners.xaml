<UserControl xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"  x:Class="NewellClark.Wpf.UserControls.Views.PointInputSpinners"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:NewellClark.Wpf.UserControls.Views"
			 xmlns:r="clr-namespace:NewellClark.Wpf.UserControls"
			 mc:Ignorable="d"
			 Name="root" Height="Auto">

	<Grid DataContext="{Binding ElementName=root, Path=ViewModel, Mode=OneWay}">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="{Binding ElementName=root, Path=SpinnerSeparation, Mode=TwoWay}"/>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="1*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<Label>X</Label>
		<xctk:DoubleUpDown 
			Value="{Binding Path=X, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
			Grid.Column="1"/>
		
		<Label Grid.Column="3">Y</Label>
		<xctk:DoubleUpDown
			Grid.Column="4"
			Value="{Binding Path=Y, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
	</Grid>
</UserControl>
