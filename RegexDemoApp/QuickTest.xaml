<Window xmlns:Views="clr-namespace:NewellClark.Wpf.UserControls.Views;assembly=WpfUserControls"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:RegexDemoApp"
		xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"  x:Class="RegexDemoApp.QuickTest"
		mc:Ignorable="d"
		Title="QuickTest"
		Left="{Binding ElementName=pointSpinner, Path=ViewModel.X, Mode=TwoWay}"
		Top="{Binding ElementName=pointSpinner, Path=ViewModel.Y, Mode=TwoWay}"
		Width="{Binding ElementName=sizeSpinner, Path=ViewModel.Width, Mode=TwoWay}"
		Height="{Binding ElementName=sizeSpinner, Path=ViewModel.Height, Mode=TwoWay}">
	<Grid>
		<Views:PointInputSpinners x:Name="pointSpinner" HorizontalAlignment="Left" Margin="23,80,0,0" VerticalAlignment="Top" Width="259" SpinnerSeparation="41"/>
		<Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="23,41,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
		<Views:SizeInputSpinner
			x:Name="sizeSpinner" HorizontalAlignment="Left" Margin="23,111,0,0" VerticalAlignment="Top" Width="259"/>
	</Grid>
</Window>
